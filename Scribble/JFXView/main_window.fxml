<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<BorderPane prefHeight="900" prefWidth="1100" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Scribble.JFXView.MainWindowController">
    <top>
        <MenuBar fx:id="menuBar" onKeyPressed="#handleKeyboardInput">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem text="test" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <BorderPane prefHeight="800" prefWidth="800" xmlns:fx="http://javafx.com/fxml">
            <center>
                <Text text="the board will go here" />
            </center>
        </BorderPane>
    </left>
   <right>
      <VBox prefHeight="800" prefWidth="150.0">
          <padding><Insets top="10" bottom="10"/></padding>
          <Text text="Scores:" id="scores-title-text"/>
          <GridPane prefHeight="200.0" prefWidth="100.0" alignment="TOP_CENTER" hgap="5" xmlns:fx="http://javafx.com/fxml">
              <Label fx:id="player1" id="player-text" text="Player 1:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
              <Label fx:id="player2" id="player-text" text="Player 2:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
              <Label fx:id="player3" id="player-text" text="Player 3:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
              <Label fx:id="player4" id="player-text" text="Player 4:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>

              <Label fx:id="player1Score" id="scores-text" text="0" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
              <Label fx:id="player2Score" id="scores-text" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
              <Label fx:id="player3Score" id="scores-text" text="0" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
              <Label fx:id="player4Score" id="scores-text" text="0" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
          </GridPane>
      </VBox>
   </right>

    <stylesheets>
        <URL value="@main_window.css"/>
    </stylesheets>
</BorderPane>
